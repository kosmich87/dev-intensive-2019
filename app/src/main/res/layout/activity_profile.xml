<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.profile.ProfileActivity">


    <ru.skillbranch.devintensive.ui.custom.AspectRatioImageView android:id="@+id/iv_header_bg"
                                                                android:layout_width="0dp"
                                                                android:layout_height="wrap_content"
                                                                android:src="@drawable/profile_bg"
                                                                android:scaleType="centerCrop"
                                                                app:aspectRatio="1.78"
                                                                app:layout_constraintTop_toTopOf="parent"
                                                                app:layout_constraintStart_toStartOf="parent"
                                                                app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView android:id="@+id/iv_avatar"
               android:layout_width="@dimen/avatar_round_size"
               android:layout_height="@dimen/avatar_round_size"
               android:src="@drawable/avatar_default"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="@dimen/spacing_normal_16"/>


    <ImageButton android:id="@+id/btn_switch_theme"
                 android:layout_width="@dimen/btn_round_size_40"
                 android:layout_height="@dimen/btn_round_size_40"
                 android:src="@drawable/ic_switch_day_night"
                 app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                 app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                 app:layout_constraintEnd_toStartOf="@+id/iv_avatar"
                 android:layout_marginEnd="@dimen/spacing_huge_32"
                 android:background="@drawable/btn_round_bg"/>

    <ImageButton android:id="@+id/btn_edit"
                 android:layout_width="@dimen/btn_round_size_40"
                 android:layout_height="@dimen/btn_round_size_40"
                 android:src="@drawable/ic_edit_black_24dp"
                 app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                 app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                 app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                 android:layout_marginStart="@dimen/spacing_huge_32"
                 android:background="@drawable/btn_round_bg"/>

    <TextView android:id="@+id/tv_nick_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Profile.Header.Nickname"
              app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:id="@+id/tv_rank"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Profile.Header.Rank"
              app:layout_constraintTop_toBottomOf="@+id/tv_nick_name"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_rating_respect"
                                                       android:layout_width="0dp"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintTop_toBottomOf="@+id/iv_header_bg"
                                                       android:background="?attr/colorAccentedSurface"
                                                       android:paddingTop="@dimen/spacing_normal_16"
                                                       android:paddingBottom="@dimen/spacing_normal_16">

        <TextView android:id="@+id/tv_rating"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="0"
                  style="@style/Profile.Metrics.Value"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toStartOf="@+id/divider"
                  app:layout_constraintTop_toTopOf="parent"
                  android:drawableLeft="@drawable/ic_sp_24"/>

        <TextView android:id="@+id/rating_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/profile_label_rating"
                  style="@style/Profile.Metrics.Label"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toStartOf="@+id/divider"
                  app:layout_constraintTop_toBottomOf="@+id/tv_rating"/>

        <View android:id="@+id/divider"
              android:layout_width="1dp"
              android:layout_height="0dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:background="?attr/colorDivider"
              app:layout_constraintTop_toTopOf="@+id/tv_rating"
              app:layout_constraintBottom_toBottomOf="@+id/rating_label"/>

        <TextView android:id="@+id/tv_respect"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="0"
                  style="@style/Profile.Metrics.Value"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/divider"
                  app:layout_constraintTop_toTopOf="parent"
                  android:drawableLeft="@drawable/ic_respect_24"/>

        <TextView android:id="@+id/respect_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/profile_label_respect"
                  style="@style/Profile.Metrics.Label"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/divider"
                  app:layout_constraintTop_toBottomOf="@+id/tv_respect"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/cl_first_last_name"
                                                       android:layout_width="0dp" android:layout_height="wrap_content"
                                                       android:orientation="horizontal"
                                                       android:padding="@dimen/spacing_normal_16"
                                                       app:layout_constraintTop_toBottomOf="@+id/cl_rating_respect"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent">

        <ImageView android:id="@+id/avatar_img"
                   android:layout_width="@dimen/btn_round_size_40"
                   android:layout_height="@dimen/btn_round_size_40"
                   android:src="@drawable/ic_avatar"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/wr_first_name"
                                                               android:layout_width="0dp"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginStart="@dimen/spacing_normal_16"
                                                               app:layout_constraintStart_toEndOf="@+id/avatar_img"
                                                               app:layout_constraintBottom_toBottomOf="@+id/avatar_img"
                                                               app:layout_constraintEnd_toEndOf="parent">

            <EditText android:id="@+id/et_first_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/Profile.EditText.Single"
                      android:hint="@string/profile_hint_first_name"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/wr_last_name"
                                                               android:layout_width="0dp"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginStart="@dimen/spacing_normal_16"
                                                               app:layout_constraintTop_toBottomOf="@+id/wr_first_name"
                                                               app:layout_constraintStart_toEndOf="@+id/avatar_img"
                                                               app:layout_constraintEnd_toEndOf="parent">

            <EditText android:id="@+id/et_last_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/Profile.EditText.Single"
                      android:hint="@string/profile_hint_last_name"/>
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View android:id="@+id/divider2"
          android:layout_width="0dp"
          android:layout_height="1dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="?attr/colorDivider"
          app:layout_constraintTop_toBottomOf="@+id/cl_first_last_name"
          android:layout_marginStart="@dimen/space_maximum_72"/>

    <LinearLayout android:id="@+id/ll_about"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintTop_toBottomOf="@+id/divider2"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:padding="@dimen/spacing_normal_16">

        <ImageView android:layout_width="@dimen/btn_round_size_40"
                   android:layout_height="@dimen/btn_round_size_40"
                   android:src="@drawable/ic_about"/>

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/wr_about"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginStart="@dimen/spacing_normal_16"
        app:counterMaxLength="125"
        app:counterEnabled="false">

            <EditText android:id="@+id/et_about"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/Profile.EditText.MultiLine"
                      android:hint="@string/profile_hint_about"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View android:id="@+id/divider3"
          android:layout_width="0dp"
          android:layout_height="1dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="?attr/colorDivider"
          app:layout_constraintTop_toBottomOf="@+id/ll_about"
          android:layout_marginStart="@dimen/space_maximum_72"/>

    <LinearLayout android:id="@+id/ll_repository"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintTop_toBottomOf="@+id/divider3"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:padding="@dimen/spacing_normal_16">

        <ImageView android:layout_width="@dimen/btn_round_size_40"
                   android:layout_height="@dimen/btn_round_size_40"
                   android:src="@drawable/ic_repo"/>

        <com.google.android.material.textfield.TextInputLayout android:id="@+id/wr_repository"
                                                               android:layout_width="0dp"
                                                               android:layout_height="wrap_content"
                                                               android:layout_marginStart="@dimen/spacing_normal_16"
                                                               android:layout_weight="1">

            <EditText android:id="@+id/et_repository"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      style="@style/Profile.EditText.Single"
                      android:hint="@string/profile_hint_repository"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView android:id="@+id/ic_eye"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/ic_eye_24dp"
                   android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_normal_16"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>